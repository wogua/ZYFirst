<!-- The top and bottom paddings are defined in this container, but since we want
     the list view to span the full width (for touch interception purposes), we
     will bake the left/right padding into that view's background itself. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants">

    <RelativeLayout
        android:id="@+id/card_title_container"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:paddingLeft="10dp"
        android:background="@drawable/card_title_background"
        android:descendantFocusability="afterDescendants">

        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_icon"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_content_container"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:paddingLeft="10dp"
        android:background="@drawable/card_content_background">

        <TextView
            android:id="@+id/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            />

    </RelativeLayout>

</LinearLayout>