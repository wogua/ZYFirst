<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/preview_item"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/preview_effects_linearLayout"
        android:layout_width="@dimen/preview_effects_item_width"
        android:layout_height="@dimen/preview_effects_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:focusable="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/preview_effects_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:scaleType="center" />

        <TextView
            android:id="@+id/preview_effects_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/preview_item_title_margin_top"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/preview_effects_item_title_textcolor"
            android:textSize="@dimen/preview_effects_item_text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/preview_effects_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/preview_effects_item_check_margin_right"
        android:src="@drawable/ic_check"
        android:visibility="gone" />
</FrameLayout>