<com.android.launcher3.OverviewPagedContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.android.launcher3.pageindicators.PageIndicatorUnderline xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/overview_pageindicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wallpaper_indicator_height"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true" />

    <com.android.launcher3.OverviewPagedView
        android:id="@+id/overview_pagedview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/overview_pagedview_height"
        android:layout_gravity="top"
        launcher:pageIndicator="@id/overview_pageindicator">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:weightSum="4">

            <com.android.launcher3.colors.ChameleonTextView
                android:id="@+id/valcants_clear_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/ic_valcants_clear"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:stateListAnimator="@animator/overview_button_anim"
                android:text="@string/arrange_button_text"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <com.android.launcher3.colors.ChameleonTextView
                android:id="@+id/wallpaper_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/ic_wallpaper"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:stateListAnimator="@animator/overview_button_anim"
                android:text="@string/wallpaper_button_text"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <com.android.launcher3.colors.ChameleonTextView
                android:id="@+id/widget_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/ic_widget"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:stateListAnimator="@animator/overview_button_anim"
                android:text="@string/widget_button_text"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <com.android.launcher3.colors.ChameleonTextView
                android:id="@+id/special_effect_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/ic_special_effect"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:stateListAnimator="@animator/overview_button_anim"
                android:text="@string/special_effect_setting"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:weightSum="4">


            <com.android.launcher3.colors.ChameleonTextView
                android:id="@+id/hide_app_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/ic_hide_app"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:stateListAnimator="@animator/overview_button_anim"
                android:text="@string/hide_app_title"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <com.android.launcher3.colors.ChameleonTextView
                android:id="@+id/settings_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/ic_setting"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:stateListAnimator="@animator/overview_button_anim"
                android:text="@string/settings_button_text"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </com.android.launcher3.OverviewPagedView>

</com.android.launcher3.OverviewPagedContainer>