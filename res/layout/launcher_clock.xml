<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/widget_margin">

    <TextClock
        android:id="@+id/appwidget_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:format12Hour="h:mm"
        android:format24Hour="HH:mm"
        android:includeFontPadding="false"
        android:paddingLeft="3dp"
        android:text="@string/appwidget_text"
        android:textColor="@color/launcher_clock_text_color_white"
        android:textSize="64sp"
        android:translationY="-7dp"/>

    <TextView
        android:id="@+id/appwidget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_time"
        android:fontFamily="noto-sans-regular"
        android:includeFontPadding="false"
        android:paddingLeft="6dp"
        android:textColor="@color/launcher_clock_text_color_white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/appwidget_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_time"
        android:layout_toRightOf="@id/appwidget_date"
        android:fontFamily="noto-sans-regular"
        android:includeFontPadding="false"
        android:paddingLeft="4dp"
        android:textColor="@color/launcher_clock_text_color_white"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/appwidget_aa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/appwidget_week"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/appwidget_time"
        android:fontFamily="noto-sans-regular"
        android:textColor="@color/launcher_clock_text_aa_color_white"
        android:textSize="14sp"
    />
</RelativeLayout>